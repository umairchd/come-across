  <body>
    <%= yield %>
    <script>
        $('.lazy_carousel').slick({
            lazyLoad: 'ondemand',
            slidesToShow: 3,
            slidesToScroll: 1,
            centerPadding: "20px",
            arrows: true
        });

        $(document).ready(function() {
            $('input[name="food-star-rating"]').change(function() {
                var selectedValue = $('input[name="food-star-rating"]:checked').val();
                var food_rating = document.getElementById("place_ratings_attributes_0_value");
                food_rating.value = selectedValue;
            });

            $('input[name="landscape-star-rating"]').change(function() {
                var selectedValue = $('input[name="landscape-star-rating"]:checked').val();
                var landscape_rating = document.getElementById("place_ratings_attributes_1_value");
                landscape_rating.value = selectedValue;
            });

            $('input[name="people-star-rating"]').change(function() {
                var selectedValue = $('input[name="people-star-rating"]:checked').val();
                var people_rating = document.getElementById("place_ratings_attributes_2_value");
                people_rating.value = selectedValue;
            });
        });



    </script>
  </body>

  <style>

      * {
          padding: 0;
          margin: 0;
          box-sizing: border-box;
      }

      img {
          display: block;
          width: 100%;
          height: auto;
      }
      .carousel_image {
          height: 300px;
          overflow: hidden;
      }
      .carousel-item {
          flex: 0 0 50%;
          max-width: 50%;
      }

      .carousel_image img {
          object-fit: cover;
          object-position: center;
          height: 100%;
      }

      .slick-arrow {
          z-index: 10;
          width: 40px;
          height: 40px;
      }
      .slick-prev.slick-arrow {
          left: 20px;
      }
      .slick-next.slick-arrow {
          right: 20px;
      }
      .slick-prev:before,
      .slick-next:before {
          font-size: 40px;
      }
      @media (max-width: 767px) {
          .carousel-inner .carousel-item > div {
              display: none;
          }
          .carousel-inner .carousel-item > div:first-child {
              display: block;
          }
      }

      .carousel-inner .carousel-item.active,
      .carousel-inner .carousel-item-next,
      .carousel-inner .carousel-item-prev {
          display: flex;
      }

      /* medium and up screens */
      @media (min-width: 768px) {
          .carousel-inner .carousel-item-end.active,
          .carousel-inner .carousel-item-next {
              transform: translateX(33.33%);
          }

          .carousel-inner .carousel-item-start.active,
          .carousel-inner .carousel-item-prev {
              transform: translateX(-33.33%);
          }
      }

      .carousel-inner .carousel-item-end,
      .carousel-inner .carousel-item-start {
          transform: translateX(0);
      }

